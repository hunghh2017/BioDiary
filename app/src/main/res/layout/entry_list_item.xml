<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp"
    card_view:contentPaddingBottom="12dp"
    card_view:contentPaddingLeft="16dp"
    card_view:contentPaddingRight="16dp"
    card_view:contentPaddingTop="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:scrollbars="vertical">

        <ImageView
            android:id="@+id/iv_entry_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:contentDescription="@string/date"
            android:src="@drawable/ic_today" />

        <TextView
            android:id="@+id/tv_entry_timestamp"
            style="@style/EntryDateStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv_entry_date"
            android:layout_toRightOf="@id/iv_entry_date"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_entry_content"
            style="@style/EntryContentStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_entry_timestamp"
            android:layout_toEndOf="@id/iv_entry_date"
            android:layout_toRightOf="@id/iv_entry_date"
            android:textSize="13sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>

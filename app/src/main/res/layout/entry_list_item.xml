<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:paddingBottom="10dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/iv_entry_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:contentDescription="@string/date"
        android:src="@drawable/ic_today" />

    <TextView
        android:id="@+id/tv_entry_timestamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/iv_entry_date"
        android:layout_toRightOf="@id/iv_entry_date"
        android:textColor="@color/colorPrimaryText"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_entry_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_entry_timestamp"
        android:layout_toEndOf="@id/iv_entry_date"
        android:layout_toRightOf="@id/iv_entry_date"
        android:textColor="@color/colorSecondaryText"
        android:textSize="13sp" />

</RelativeLayout>
